doctype html
html
  head
    title #{title}
    meta(name="viewport" content="width=device-width, initial-scale=1")
    block links
      link(rel="stylesheet" href="/stylesheet/svg.css")
      link(rel="stylesheet" href="/stylesheet/index.css")
      link(rel="stylesheet" href="/stylesheet/layout/layout.css")
      link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css")

    body
      block header
        //- !=h.dump(items)
        header(class="layout__header")
          div(class="layout__gif-ads")
          nav(class="layout__navbar")
            ul(class="layout__navlist")  
              li(class="layout__navlist-item")
                div.layout__navbar-search-block
                  i.fa.fa-search &nbsp;&nbsp;
                  input.layout__nav-search(type="text" placeholder="Search Products, Brands and Categories")
                button.layout__btn.btn--search search
              if !user
                li(class="layout__navlist-item")
                  a(href="/user/login")
                    if false
                      !=h.icon('user')
                    span login
              else 
                li(class="layout__navlist-item"): a(href="/user/logout"): span logout
              li(class="layout__navlist-item"): a: span help
              li(class="layout__navlist-item"): a
                if false
                  img.layout__nav-cart-image(src="https://img.icons8.com/nolan/64/000000/shopping-cart.png")
                span cart
                span(id="layout__cart-items-counter")
        
      block messages
      if locals.flashes
        .inner--flashes
          .flash-messages
            - const categories = Object.keys(locals.flashes)
              each category in categories
                each message in flashes[category]
                  p!=message
                  button.flash__remove(onClick="this.parentElement.remove()") &times;
  

      .content
        block content


      
      
      